<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Keyboard Inventory</title>
    <link rel="icon" type="image/x-icon" href="/icons/package.svg">
    <link rel="stylesheet" href="/reset.css" />
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <%- include("components/sidebar") %>
    <div id="main">
      <%- include("components/searchbar") %>
      <h1>Dashboard</h1>
      <div id="stock-buttons-display">
        <a class="stock-button" id="in-stock-button" href="/in-stock">
          <p><%= buttonArray[0] %> SKUs in stock</p>
          <img src="icons/arrow-right-circle.svg" alt="">
        </a>
        <a class="stock-button" id="low-stock-button" href="/low-stock">
          <p><%= buttonArray[1] %> SKUs low in stock</p>
          <img src="icons/arrow-right-circle.svg" alt="">
        </a> 
        <a class="stock-button" id="out-stock-button" href="/out-of-stock">
          <p><%= buttonArray[2] %> SKUs out of stock</p>
          <img src="icons/arrow-right-circle.svg" alt="">
        </a>  
      </div>

      <div id="items-display">
        <% for(item of items) { %>
          <%- include("components/item", {item: item}) %>
        <% } %>
      </div>
    </div>
  </body>
</html>
