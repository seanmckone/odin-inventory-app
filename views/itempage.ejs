<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= item.name %></title>
    <link rel="icon" type="image/x-icon" href="/icons/package.svg" />
    <link rel="stylesheet" href="/reset.css" />
    <link rel="stylesheet" href="/styles.css" />
    <script src="https://cdn.jsdelivr.net/npm/jsbarcode@3.11.6/dist/JsBarcode.all.min.js"></script>
  </head>
  <body>
    <%- include("components/sidebar") %>
    <div id="main">
      <%- include("components/searchbar") %>
      <div id="item-header">
        <h1>Item</h1>
        <a href="<%= item.id %>/edit">
          <img class="icon" src="/icons/pencil.svg" />
        </a>
        <a href="<%= item.id %>/delete">
          <img class="icon" src="/icons/trash-can.svg" />
        </a>
      </div>
      <div id="item-display">
        <div id="item-img-barcode">
          <img src=<%= item.image_url %>>
          <svg id="barcode"></svg>
          <script>
            // Generate the barcode when the DOM is loaded
            document.addEventListener('DOMContentLoaded', function() {
                JsBarcode("#barcode", <%- JSON.stringify(item.upc) %>, {background: "transparent"});
            });
          </script>
        </div>
        <div id="item-text">
          <h4><%= item.name %></h4>
          <div>
            <p>SKU: <%= item.sku %></p>
            <p>UPC: <%= item.upc %></p>
          </div>
          <div>
            <p>Price: $<%= item.price %></p>
            <p>In Stock: <%= item.stock_count %></p>
          </div>
          <div>
            <p>Size: <%= item.kb_size %></p>
            <p>Brand: <%= item.kb_brand %></p>
            <p>Switch: <%= item.kb_switch %></p>
            <p>Profile: <%= item.kb_profile %></p>
            <p>Case Material: <%= item.kb_case_material %></p>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
